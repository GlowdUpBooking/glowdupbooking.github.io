/* ---------------- PRICING ---------------- */
.navLinks{display:flex; gap:14px; align-items:center}
.navLink{
  padding:8px 10px;
  border-radius:12px;
  color: rgba(244,241,246,.82);
  border: 1px solid transparent;
  background: transparent;
  transition: background .18s ease, border-color .18s ease, color .18s ease;
}
.navLink:hover{
  background: rgba(255,255,255,.06);
  border-color: rgba(255,255,255,.10);
  color: rgba(244,241,246,.94);
}
.navLink--active{
  background: rgba(216,180,106,.10);
  border-color: rgba(216,180,106,.22);
  color: rgba(244,241,246,.96);
}

.pricingGrid{
  margin-top:16px;
  display:grid;
  grid-template-columns: 1.15fr .85fr;
  gap:14px;
}
@media (max-width: 980px){
  .pricingGrid{grid-template-columns: 1fr}
}

.priceCard{
  padding:18px;
  border-radius: 20px;
  background: rgba(12,10,14,.44);
  border: 1px solid rgba(255,255,255,.075);
  box-shadow: var(--shadow2);
}
.priceCard--featured{
  position:relative;
  overflow:hidden;
  border-color: rgba(216,180,106,.18);
}
.priceCard--featured::before{
  content:"";
  position:absolute; inset:-40px;
  background:
    radial-gradient(900px 520px at 45% 0%, rgba(216,180,106,.20), transparent 60%),
    radial-gradient(720px 460px at 85% 60%, rgba(150,110,40,.10), transparent 62%);
  opacity:.95;
  pointer-events:none;
}
.priceCard--featured > *{position:relative; z-index:1}

.priceTop{
  display:flex;
  align-items:flex-start;
  justify-content:space-between;
  gap:14px;
}
.priceBadge{
  display:inline-flex;
  font-size:12px;
  padding:7px 10px;
  border-radius:999px;
  border: 1px solid rgba(216,180,106,.28);
  background: rgba(216,180,106,.10);
  color: rgba(244,241,246,.92);
}
.priceBadge--muted{
  border-color: rgba(255,255,255,.14);
  background: rgba(255,255,255,.06);
}
.priceTitle{margin-top:10px; font-weight:900; font-size:22px}
.priceSub{margin-top:6px; color: rgba(244,241,246,.74)}

.priceNumber{text-align:right}
.priceAmount{
  font-family: ui-serif, Georgia, "Times New Roman", Times, serif;
  font-size:44px;
  line-height:1;
}
.priceTerm{display:block; margin-top:6px; color: rgba(244,241,246,.70)}

.countdownRow{margin-top:14px}
.countdownPill{
  display:inline-flex;
  padding:9px 12px;
  border-radius:999px;
  border:1px solid rgba(216,180,106,.22);
  background: rgba(216,180,106,.10);
  box-shadow: 0 16px 56px rgba(216,180,106,.10);
}
.countdownNote{margin-top:8px; color: rgba(244,241,246,.70); font-size:12px}

.priceList{
  margin:14px 0 0;
  padding:0 0 0 18px;
  color: rgba(244,241,246,.82);
  line-height:1.6;
}
.priceList li{margin:8px 0}

.priceCtas{
  margin-top:16px;
  display:grid;
  gap:10px;
}

.feeBox{
  margin-top:14px;
  padding:14px;
  border-radius: 16px;
  border: 1px solid rgba(255,255,255,.08);
  background: rgba(0,0,0,.18);
}
.feeTitle{font-weight:900; margin-bottom:10px}
.feeRow{
  display:flex;
  justify-content:space-between;
  gap:10px;
  padding:8px 0;
  border-top: 1px solid rgba(255,255,255,.06);
}
.feeRow:first-of-type{border-top:none}
.finePrint{
  margin-top:12px;
  font-size:12px;
  color: rgba(244,241,246,.68);
}